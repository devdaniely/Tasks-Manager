{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": false,
    "allowJs": true,
    "paths": {
      "@app/*": ["src/*"],               // Set alias for src folder
      "@dist/*": ["dist/*"]              // Set alias for dist folder
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
